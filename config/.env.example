# VPS Environment Configuration
# Copy this file to .env and update with your actual values

# MT5 Account Settings
MT5_LOGIN=your_mt5_account_number
MT5_PASSWORD=your_mt5_password
MT5_SERVER=your_broker_server_name

# API Security
API_SECRET_KEY=your_secret_api_key_here
ALLOWED_ORIGINS=https://yourdomain.com,http://localhost:3000

# Server Settings
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
DEBUG_MODE=False

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=mt5_production.log

# Trading Settings
DEFAULT_MAGIC_NUMBER=123456789
DEFAULT_DEVIATION=20
MAX_RETRY_ATTEMPTS=3

# VPS Specific Settings
AUTO_RESTART=True
HEALTH_CHECK_INTERVAL=60
BACKUP_LOGS=True

# Email Notifications (Optional)
EMAIL_ENABLED=False
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
ALERT_EMAIL=your_alert_email@gmail.com

# Telegram Bot (Optional)
TELEGRAM_ENABLED=False
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id
