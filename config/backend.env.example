# Production Deployment Configuration

# Environment Variables for Production
SECRET_KEY=generate-your-own-secret-key-here
JWT_SECRET_KEY=generate-your-own-jwt-secret-here
DATABASE_PATH=/opt/trading/data/trading_accounts.db
ENCRYPTION_KEY=generate-your-own-encryption-key-here
CORS_ORIGINS=https://zicula.github.io
API_RATE_LIMIT=100
SESSION_TIMEOUT=24
PORT=8080
FLASK_ENV=production

# SSL Configuration (when using HTTPS)
SSL_CERT_PATH=/opt/trading/ssl/cert.pem
SSL_KEY_PATH=/opt/trading/ssl/key.pem

# Database Configuration
DB_BACKUP_PATH=/opt/trading/backups/
DB_BACKUP_RETENTION_DAYS=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/opt/trading/logs/trading_server.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Security Configuration
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
REQUIRE_HTTPS=true

# MT5 Configuration
MT5_TIMEOUT_SECONDS=30
MT5_MAX_CONNECTIONS=10
MT5_CONNECTION_POOL=true
